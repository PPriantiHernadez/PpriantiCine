@model ML.Cine
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <section>

        <h1 class="text-center">Lista de Cines</h1>
        <p>
            En este modulo puedes visualizar a los Cines existentes, agregar, modificar y eliminar un Cine
        </p>
    </section>
    <section>

        <div style="float:right;">
            <div class="row">
                @Html.ActionLink("Agregar", "Form", "Cine", htmlAttributes: new { @class = "btn btn-success bi bi-person-plus-fill" })
            </div>
        </div>
    </section>
    <hr />
    <section>
        @if (Model.Cines == null)
        {
            <div class="row">
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            </div>
        }
        else
        {
            <table class="table table-hover table-bordered table-responsive">
                <thead>
                    <tr>
                        <td class="text-center" style=" font-weight:bold;">Editar</td>
                        <td class="visually-hidden">IdCine</td>
                        <td class="text-center" style="font-weight:bold;">Nombre</td>
                        <td class="text-center" style="font-weight:bold;">Direcion</td>
                        <td class="visually-hidden" style="font-weight:bold;">IdZona</td>
                        <td class="text-center" style="font-weight:bold;">Zona</td>
                        <td class="text-center" style=" font-weight:bold;">Ventas</td>
                        <td class="visually-hidden">Latitud</td>
                        <td class="visually-hidden">Longitud</td>
                        <td class="text-center" style=" font-weight:bold;">Eliminar</td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (ML.Cine cine in Model.Cines)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Cine", new { IdCine = cine.IdCine })"></a></td>
                            <td class="visually-hidden">@cine.IdCine</td>
                            <td>@cine.Nombre </td>
                            <td>@cine.Direccion </td>
                            <td class="visually-hidden">@cine.Zona.IdZona </td>
                            <td>@cine.Zona.Nombre</td>
                            <td>@cine.Ventas </td>
                            <td class="visually-hidden">@cine.Latitud </td>
                            <td class="visually-hidden">@cine.Longitud </td>
                            <td class="text-center"><a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", "Cine", new { IdCine = cine.IdCine})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>
</div>

