@model ML.Usuario
@{
    ViewData["Title"] = "Recuperar password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Recuperar password</title>
    <link rel="stylesheet" type="text/css" href="/css/StyleSheet.css">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
</head>
<body>
    <div class="singup">
        @using (Html.BeginForm("NewPassword", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label for="chk" aria-hidden="true">Recuperar Contraseña</label>
            <input type="password" name="password" placeholder="Ingrese su nuevo password" required="">
            <input type="password" name="passwordValidacion" placeholder="Escriba de nuevo el password" required="">
            <button type="submit">Enviar</button>
        }
    </div>

</body>
</html>
